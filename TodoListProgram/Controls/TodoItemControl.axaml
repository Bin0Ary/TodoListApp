<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:TodoListLibrary.Models;assembly=TodoListLibrary"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="90"
             x:Class="TodoListProgram.Controls.TodoItemControl"
             x:DataType="models:TodoListItemModel">
    <Grid ColumnDefinitions="*, auto" ShowGridLines="true" Background="#EFEFEF">
		<StackPanel Grid.Column="0" Margin="12">
			<Label x:Name="titleLabel" Content="{Binding Title}" FontSize="20"></Label>
            <Label x:Name="descriptionLabel" Content="{Binding Description}"></Label>
            <Label x:Name="timeLabel" Content="{Binding TimeRemaining}"></Label>
        </StackPanel>
        <Grid Grid.Column="1" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

            <CheckBox Grid.Row="0"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Padding="0,0,0,0"
                      IsChecked="{Binding IsChecked}"
                      IsCheckedChanged="CheckBox_IsCheckedChanged"/> 
            <Button Grid.Row="1"
                    CornerRadius="20"
                    Margin="0,0,0,0"
                    Padding="5"
                    HorizontalAlignment="Center"
                    Content="Delete"/>
        </Grid>
    </Grid>
</UserControl>
