<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TodoListProgram.App"
             xmlns:local="using:TodoListProgram"
             RequestedThemeVariant="Light">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Styles/AppLightModeStyles.axaml"/>
        
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="Assets/Fonts/ProximaNova/proximanova_black.ttf#Proxima Nova"/>
        </Style>
        
        <Style Selector="TextBox">
            <Setter Property="FontFamily" Value="Assets/Fonts/ProximaNova/proximanova_black.ttf#Proxima Nova"/>
        </Style>
    </Application.Styles>
    
    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryBackgroundColor">#F6F6F6</SolidColorBrush>
    </Application.Resources>
</Application>